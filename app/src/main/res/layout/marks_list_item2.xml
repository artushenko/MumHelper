<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="predmet"
        android:id="@+id/nameOfDiscipline"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:textColor="#ff03a9f4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameOfDiscipline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableRow"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="1dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/liner"
            android:background="#ff03a9f4"
            android:textSize="1dp" />
    </TableRow>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statusPredmetImageView"
        android:layout_below="@+id/tableRow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/tick"
        android:paddingLeft="10dp"
        android:paddingTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(экзамен)"
        android:id="@+id/formOfControl"
        android:layout_below="@+id/tableRow"
        android:layout_toRightOf="@+id/statusPredmetImageView"
        android:layout_toEndOf="@+id/statusPredmetImageView"
        android:paddingTop="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(29.02.2015)"
        android:id="@+id/date"
        android:paddingLeft="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="30dp"
        android:layout_below="@+id/tableRow"
        android:paddingTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/mark"
        android:textColor="#ff000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingTop="0dp"
        android:layout_alignTop="@+id/date"
        android:layout_centerHorizontal="true" />

</RelativeLayout>