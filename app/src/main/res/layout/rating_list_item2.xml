<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/numberRating"
        android:textSize="22dp"
        android:layout_gravity="left|center"
        android:textColor="#ff03a9f4"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewRaiting"
        android:layout_alignBottom="@+id/numberRating"
        android:layout_toRightOf="@+id/numberRating"
        android:layout_toEndOf="@+id/numberRating"
        android:src="@drawable/rait1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRowLine"
        android:layout_span="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/imageViewRaiting"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView31"
            android:layout_column="0"
            android:background="#ff03a9f4"
            android:layout_gravity="center_vertical"
            android:layout_span="2"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_weight="12"
            android:paddingTop="2dp"
            android:textSize="0dp"
            android:paddingBottom="0dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRowSurname"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_alignTop="@+id/tableRowLine"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/surname"
            android:textSize="22sp"
            android:layout_gravity="left|center"
            android:layout_weight="2"
            android:paddingLeft="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:id="@+id/avarege"
            android:layout_gravity="center|right"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingRight="15dp"
            android:paddingTop="9dp"
            android:password="false" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/tableRowName"
        android:layout_below="@+id/tableRowSurname"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/name"
            android:textSize="18sp"
            android:paddingLeft="0dp" />
    </TableRow>


</RelativeLayout>