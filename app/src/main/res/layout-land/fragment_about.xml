<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.martp.mihail.mumhelper.AboutFragment"
    android:background="#E1F5FE">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="193dp"
            android:id="@+id/imageView"
            android:src="@drawable/muu_logo_300x293"
            android:paddingTop="5dp"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Мобильная учебная карточка студента Минского университета управления"
                android:id="@+id/textView12_app_name"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#01579B"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Версия 2.0"
                android:id="@+id/textView18_version_app"
                android:layout_below="@+id/textView12_app_name"
                android:layout_centerHorizontal="true"
                android:textSize="14dp"
                android:textColor="#0277BD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04.04.2015"
                android:id="@+id/textView13_date_reliz"
                android:textSize="14dp"
                android:textColor="#0277BD"
                android:layout_below="@+id/textView18_version_app"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Идея и разработка:"
                android:id="@+id/textView14_develor_txt"
                android:textSize="14dp"
                android:paddingTop="15dp"
                android:textColor="#0277BD"
                android:layout_below="@+id/textView13_date_reliz"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Михаил Артюшенко"
                android:id="@+id/textView15_developer"
                android:textSize="18dp"
                android:textColor="#01579B"
                android:textStyle="bold"
                android:layout_below="@+id/textView14_develor_txt"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="brom128@gmail.com"
                android:id="@+id/textView16_email"
                android:linksClickable="true"
                android:textStyle="italic"
                android:clickable="false"
                android:layout_below="@+id/textView15_developer"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://blog.artushenko.by"
                android:id="@+id/textView17_link_blog"
                android:clickable="false"
                android:linksClickable="true"
                android:layout_below="@+id/textView16_email"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://martp.net"
                android:id="@+id/textView12_link_site"
                android:layout_below="@+id/textView17_link_blog"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:linksClickable="true" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
